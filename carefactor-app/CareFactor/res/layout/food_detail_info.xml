<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginScreenScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="clip_horizontal"
    android:background="@drawable/app_repeat_bg" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!-- <TextView -->
        <!-- android:id="@+id/textView1" -->
        <!-- android:layout_width="fill_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_marginBottom="5dip" -->
        <!-- android:layout_gravity="center" -->
        <!-- android:gravity="center" -->
        <!-- android:background="#cccccc" -->
        <!-- android:text="- BACK" -->
        <!-- android:textColor="#000000" -->
        <!-- android:textSize="11sp" /> -->

        <TextView
            android:id="@+id/section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="11dp"
            android:text="Food item details"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/bar01"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/section_title"
            android:background="@android:drawable/divider_horizontal_bright"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/food_name_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Potatis Sallad"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/food_category_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Category: Vegetables"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Description"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/food_description_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            android:text="Food item is about to expire and its still in good state... we trying to avoid waste!"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Expiry Date"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/food_expiry_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            android:text="2012-1-15"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Dates available for pickup"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/food_pickup_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            android:text="2012-1-15  to  2012-2-15"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Producer"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/food_producer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="10dp"
            android:text="Ica Kvantum"
            android:textSize="14sp" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal" >

            <RatingBar
                android:id="@+id/row_rating_producer"
                style="@style/carefactorRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="2.5" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="3 users ratings"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Available / Desired Quantity"
            android:textSize="11sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/button_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/food_quantity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="10dp"
                android:text="400 kg"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/txt_desired_unit"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_below="@+id/new_product_name_text"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:inputType="number"
                android:singleLine="true"
                android:text="1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/food_quantity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="2dp"
                android:text="(in kg)"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Price Details"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/food_price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="130 SEK per unit"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/bar01"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:drawable/divider_horizontal_bright"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_search_list"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_button"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Back"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:textStyle="bold" />
            
             <Button
                android:id="@+id/btn_other_share"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_button"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:drawableLeft="@drawable/ic_menu_share"
                android:shadowRadius="2"
                android:text="Share"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:textStyle="bold" />
            
             
            <Button
                android:id="@+id/btn_share"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_button_blue"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:drawableLeft="@drawable/ic_menu_share"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Facebook"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:textStyle="bold" />

         
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal" >

            

            <Button
                android:id="@+id/btn_producer_details"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_button"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Producer Details"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:textStyle="bold" />
            
               <Button
                android:id="@+id/btn_Add_to_wish_list"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_button"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Add to wish list"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>